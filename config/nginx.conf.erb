daemon off;
worker_processes <%= ENV['NGINX_WORKERS'] %>;
pid /app/nginx.pid;
error_log stderr;

events {
  use epoll;
  accept_mutex on;
  worker_connections 1024;
}

http {
  log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id fwd=$http_x_forwarded_for';

  access_log error l2met;

  include mime.types;
  default_type application/octet-stream;
  sendfile on;

  upstream website {
    server ssl.zunda.ninja:443 ;
  }

  server {
    listen <%= ENV['PORT'] %>;
    server_name _;
    keepalive_timeout 5;

    location / {
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host ssl.zunda.ninja;
      proxy_redirect off;
      proxy_pass https://website;
    }

    location /ssl {
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host ssl.zunda.ninja;
      proxy_redirect off;
      proxy_pass https://website;
      proxy_ssl_server_name on;
			proxy_ssl_name ssl.zunda.ninja;
    }

  }

}
